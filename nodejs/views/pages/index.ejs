                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        <% })} %>
      </div>
      <div class="mt-4 text-right">
        <a href="/products?tag=summer_specials" class="text-green-600 hover:underline">View All Summer Specials →</a>
      </div>
    </section>

    <!-- Everyday Essentials Section -->
    <section class="mt-16 bg-blue-50 p-6 rounded-lg">
      <div class="flex items-center mb-4">
        <h2 class="text-2xl font-bold">Everyday Essentials</h2>
        <span class="ml-3 px-3 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">Must-Have</span>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% 
        // Filter products with everyday_essentials tag
        const everydayEssentials = products.filter(p => p.specialTag && Array.isArray(p.specialTag) && p.specialTag.includes('everyday_essentials')).slice(0, 4);
        
        if (everydayEssentials.length === 0) {
        %>
          <div class="col-span-4 text-center py-8">
            <p class="text-gray-500">No everyday essentials available at the moment.</p>
          </div>
        <% } else {
          everydayEssentials.forEach(product => { 
        %>
          <div class="product-card <%= product.status === 'Sold Out' ? 'sold-out' : '' %> bg-white p-4 rounded-lg shadow-sm">
            <div class="relative">
              <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover rounded-md" loading="lazy">
              <span class="absolute top-2 left-2 px-2 py-1 bg-blue-600 text-white text-xs font-bold rounded-full">Everyday Essential</span>
              <% if(product.isOrganic) { %>
                <span class="absolute bottom-2 left-2 px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">
                  Organic
                </span>
              <% } %>
              <% if(product.originalPrice && product.discountPercentage > 0) { %>
                <span class="absolute top-2 right-2 px-2 py-1 bg-green-600 text-white text-xs font-bold rounded-md">
                  <%= Math.round(product.discountPercentage) %>% Off
                </span>
              <% } %>
            </div>
            <h3 class="mt-2 text-lg font-semibold text-center"><%= product.name %></h3>
            <div class="flex items-baseline justify-center">
              <% if(product.originalPrice && product.discountPercentage > 0) { %>
                <p class="text-green-600 font-bold">₹<%= product.price.toFixed(2) %><% if (product.quantity) { %>&nbsp;/ <%= product.quantity.value %><%= product.quantity.unit %><% } %></p>
                <p class="ml-2 text-sm text-gray-400 line-through">₹<%= product.originalPrice.toFixed(2) %></p>
              <% } else { %>
                <p class="text-green-600 font-bold">₹<%= product.price.toFixed(2) %><% if (product.quantity) { %>&nbsp;/ <%= product.quantity.value %><%= product.quantity.unit %><% } %></p>
              <% } %>
            </div>
            
            <!-- Status below price - centered -->
            <% if(product.status === 'Sold Out') { %>
              <p class="text-red-600 text-sm font-medium mt-1 text-center">Sold Out</p>
            <% } else if(product.status === 'Coming Soon') { %>
              <p class="text-yellow-600 text-sm font-medium mt-1 text-center">Coming Soon</p>
            <% } else { %>
              <p class="text-green-600 text-sm font-medium mt-1 text-center">Available</p>
            <% } %>
            
            <!-- Action Buttons -->
            <div class="mt-2 flex space-x-2">
              <a href="/products/<%= product._id %>" 
                 class="flex-1 text-center bg-green-600 text-white py-2 rounded hover:bg-green-700 transition <%= product.status === 'Sold Out' ? 'pointer-events-none bg-gray-400' : '' %>">
                View Details
              </a>
              
              <!-- Quick Add to Cart Button (only for Available products) -->
              <% if(product.status === 'Available') { %>
                <form action="/cart" method="POST" class="flex-none">
                  <input type="hidden" name="productId" value="<%= product._id %>">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" 
                          class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700 transition"
                          title="Add to Cart">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        <% })} %>
      </div>
      <div class="mt-4 text-right">
        <a href="/products?tag=everyday_essentials" class="text-green-600 hover:underline">View All Everyday Essentials →</a>
      </div>
    </section>
  </main>
  <%- include('../partials/footer') %>
  <script src="/js/scripts.js"></script>
</body>
</html>
