<div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
    <% if (product.originalPrice && product.discountPercentage > 0) { %>
        <div class="absolute top-0 right-0 bg-green-600 text-white px-2 py-1 text-xs font-bold">
            <%= Math.round(product.discountPercentage) %>% Off
        </div>
    <% } %>
    <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
    <div class="p-4">
        <h3 class="text-lg font-medium text-gray-900 truncate"><%= product.name %></h3>
        <p class="text-sm text-gray-500 mb-2"><%= product.quantity.value %> <%= product.quantity.unit %></p>
        <div class="flex items-baseline">
            <% if (product.originalPrice && product.discountPercentage > 0) { %>
                <span class="text-lg font-bold text-green-600">₹<%= product.price %></span>
                <span class="ml-2 text-sm text-gray-400 line-through">₹<%= product.originalPrice %></span>
            <% } else { %>
                <span class="text-lg font-bold text-gray-900">₹<%= product.price %></span>
            <% } %>
        </div>
        <div class="mt-4 flex justify-between items-center">
            <button class="add-to-cart bg-green-600 text-white px-3 py-1 rounded-full text-sm hover:bg-green-700 transition-colors"
                    data-id="<%= product._id %>">
                Add to Cart
            </button>
        </div>
    </div>
</div>
